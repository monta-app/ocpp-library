{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommitTypeAll(chore)"
  ],
  "semanticCommits": "enabled",
  "prConcurrentLimit": 2,
  "packageRules": [
    {
      "groupName": "upgrade all non-major gradle dependencies",
      "matchManagers": [
        "gradle"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "groupSlug": "gradle-all",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ]
    }
  ]
}
